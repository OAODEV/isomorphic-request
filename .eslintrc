{
    # Just because it's in the style guide, doesn't mean it should be enforced.
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "comma-spacing": [2, {"before": false, "after": true}],
        "indent": [2, 2, {"SwitchCase": 1}],
        "valid-jsdoc": [2]
    }
}
